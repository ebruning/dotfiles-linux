[alias]
    lg = log --color --graph --pretty=format:'%C(magenta)[%h]%Creset -%C(yellow)%d%Creset %s %C(bold yellow)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[color]
	ui = true
[color "diff-highlight"]
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
	oldNormal = red bold
[color "diff"]
	meta = 11 bold
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	changeHunkIndicators = false
	stripLeadingSymbols = false
	markEmptyLines = false
	rulerWidth =
  useUnicodeRuler = false
